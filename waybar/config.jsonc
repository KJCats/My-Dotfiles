{
  "layer": "top",
  "position": "left",

  // Top Modules
  "modules-left": ["clock", "group/misc"],
  // Center Modules
  "modules-center": ["hyprland/workspaces"],
  // Bottom Modules
  "modules-right": ["group/volume", "network", "tray"],

  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "vertical"
  },

  "group/volume": {
    "orientation": "vertical",
    "drawer": {
      "transition-duration": 500,
      "transition-top-to-bottom": true
    },
    "modules": ["pulseaudio", "pulseaudio/slider"]
  },

  "group/misc": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "misc-modules",
      "transition-top-to-bottom": false
    },
    "modules": [
      "custom/seperator",
      "bluetooth",
      "cpu",
      "memory",
      "disk"
    ]
  },

  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}ïŠ”",
    "format-muted": "ï€¦",
    "format-icons": {
        "headphone": "ï€¥",
        "default": ["ï€§", "ï€¨"]
    },
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "ignored-sinks": ["Easy Effects Sink"],
    "tooltip-format": "Volume: {volume}%"
  },

  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "vertical"
  },

  "network": {
    "interface": "wlan0",
    "format": "{ifname}",
    "format-wifi": "{icon}",
    "format-ethernet": "ðŸ–§",
    "format-disconnected": "âš  ",
    "max-length": 50,
    "format-icons": ["â–‚", "â–„", "â–†", "â–ˆ", "ï‡« "],
    "tooltip-format": "Connected to {essid}"
},



  "custom/seperator": {
    "format": "__",
    "tooltip": false
  },

  "hyprland/workspaces": {
    "format": "{id}",
    "on-click": "activate",
    "on-scroll-down": "hyprctl dispatch workspace e+1",
    "on-scroll-up": "hyprctl dispatch workspace e-1",
    "cursor": "pointer",
  },



}
